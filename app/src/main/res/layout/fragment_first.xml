<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".ui.screens.first.FirstFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mainEnemy1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/back"
            android:visibility="visible"
            android:theme="@style/gameImage"/>

        <ImageView
            android:id="@+id/mainEnemy2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_enemy"
            android:layout_marginLeft="-15dp"
            tools:src="@drawable/goblin" />

        <ImageView
            android:id="@+id/mainEnemy3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="-15dp"
            android:background="@drawable/bg_enemy"
            tools:src="@drawable/goblin" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>