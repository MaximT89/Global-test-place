<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.SecondActivity">

    <RelativeLayout
        android:id="@+id/black_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Black"
        android:alpha="0"
        tools:alpha="1"
        android:translationZ="1000dp"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="40dp"
        android:textStyle="bold"
        android:alpha="0"
        tools:alpha="1"
        android:textColor="@color/Gray"
        android:gravity="center"
        android:text="Next Generation\nin Animate"/>

    <FrameLayout
        android:id="@+id/logo_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:visibility="gone"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/back_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/back_logo" />

        <ImageView
            android:id="@+id/front_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/front_logo" />

    </FrameLayout>
</RelativeLayout>