<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">


    <fragment
        android:id="@+id/firstFragment"
        android:name="com.secondworld.globaltestproject.ui.screens.first.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first" >
        <argument
            android:name="text"
            app:argType="string" />
        <action
            android:id="@+id/action_firstFragment_to_myDialogFragment"
            app:destination="@id/myDialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.secondworld.globaltestproject.ui.screens.second_screen.SecondFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second" />
    <dialog
        android:id="@+id/myDialogFragment"
        android:name="com.secondworld.globaltestproject.ui.screens.dialog.MyDialogFragment"
        android:label="MyDialogFragment" >
        <argument
            android:name="text"
            app:argType="string" />
        <action
            android:id="@+id/action_myDialogFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
    </dialog>
</navigation>