<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainMenuFragment3">


    <fragment
        android:id="@+id/arenaFragment"
        android:name="com.secondworld.globaltestproject.ui.screens.arena_screen.ArenaFragment"
        android:label="fragment_arena"
        tools:layout="@layout/fragment_arena" >
        <action
            android:id="@+id/action_arenaFragment_to_mainMenuFragment3"
            app:destination="@id/mainMenuFragment3" />
    </fragment>
    <fragment
        android:id="@+id/shopFragment"
        android:name="com.secondworld.globaltestproject.ui.screens.shop_screen.ShopFragment"
        android:label="fragment_shop"
        tools:layout="@layout/fragment_shop" >
        <action
            android:id="@+id/action_shopFragment_to_mainMenuFragment3"
            app:destination="@id/mainMenuFragment3" />
    </fragment>
    <fragment
        android:id="@+id/mainMenuFragment3"
        android:name="com.secondworld.globaltestproject.ui.screens.menu_screen.MainMenuFragment"
        android:label="fragment_main_menu"
        tools:layout="@layout/fragment_main_menu" >
        <action
            android:id="@+id/action_mainMenuFragment3_to_shopFragment"
            app:destination="@id/shopFragment" />
        <action
            android:id="@+id/action_mainMenuFragment3_to_arenaFragment"
            app:destination="@id/arenaFragment" />
    </fragment>
</navigation>